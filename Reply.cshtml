@model MessageBoard.Models.Guestbooks


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Guestbooks</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
         
          <div class="col-md-10">
            @Html.Label(Model.Name.ToString())
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-10">
            @Html.Label(Model.Content.ToString())
          </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
              @Html.Label(Model.CreateTime.ToString())
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Reply, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Reply, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Reply, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
